<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/recipe_card_view"
        android:layout_width="match_parent"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/recipe_card_layout_margin"
        android:elevation="2dp"
        android:padding="@dimen/recipe_card_padding"
        card_view:cardBackgroundColor="@color/colorAccent"
        card_view:cardCornerRadius="@dimen/cardview_default_radius"
        card_view:contentPadding="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/recipe_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/app_name"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textStyle="bold"
                card_view:layout_constraintEnd_toStartOf="@+id/guideline"
                card_view:layout_constraintHorizontal_bias="0.08"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/difficulty_lbl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/difficulty"
                android:textStyle="italic"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/recipe_name_tv"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/difficulty_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/average"
                android:textSize="12sp"
                card_view:layout_constraintStart_toStartOf="@+id/difficulty_lbl_tv"
                card_view:layout_constraintTop_toBottomOf="@+id/difficulty_lbl_tv" />

            <TextView
                android:id="@+id/ingredient_count_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/ingredient_count"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/recipe_name_tv" />

            <TextView
                android:id="@+id/step_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/prep_steps"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/ingredient_count_label_tv" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                card_view:layout_constraintGuide_begin="220dp" />

            <TextView
                android:id="@+id/ingredient_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/ingredient_count_label_tv"
                card_view:layout_constraintStart_toEndOf="@+id/ingredient_count_label_tv"
                tools:text="25" />

            <TextView
                android:id="@+id/step_count_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/step_label_tv"
                card_view:layout_constraintStart_toEndOf="@+id/step_label_tv"
                tools:text="6" />

            <TextView
                android:id="@+id/serving_label_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/servings"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/step_label_tv" />

            <TextView
                android:id="@+id/servings_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                card_view:layout_constraintBaseline_toBaselineOf="@+id/serving_label_tv"
                card_view:layout_constraintStart_toEndOf="@+id/serving_label_tv"
                tools:text="6" />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>