<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <data>

        <variable
            name="recipe"
            type="com.keyeswest.bake.models.Recipe" />
    </data>


    <LinearLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/recipe_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/recipe_card_layout_margin"
            android:elevation="2dp"
            android:padding="@dimen/recipe_card_padding"
            card_view:cardBackgroundColor="@color/colorAccent"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:contentPadding="8dp">


            <android.support.constraint.ConstraintLayout
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/recipe_name_tv"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"

                    android:layout_marginTop="8dp"

                    android:text="@{recipe.name}"
                    android:textAlignment="viewStart"
                    android:textSize="18sp"

                    android:textStyle="bold"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    tools:text="Recipe Name" />


                <ImageView
                    android:id="@+id/recipe_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="135dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="8dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/thumbnail"
                    android:scaleType="centerCrop"
                    android:src="@{recipe.getThumbnail(context)}"
                    card_view:layout_constraintDimensionRatio="w,3:2"
                    card_view:layout_constraintEnd_toEndOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toBottomOf="@+id/recipe_name_tv" />


            </android.support.constraint.ConstraintLayout>


        </android.support.v7.widget.CardView>

    </LinearLayout>


</layout>